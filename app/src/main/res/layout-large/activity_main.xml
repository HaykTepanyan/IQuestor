<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/title_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/language_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#424756"
            android:src="@drawable/baseline_language_24" />

        <ImageButton
            android:id="@+id/volume_up_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="38dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#424756"
            android:src="@drawable/baseline_volume_up_24" />

        <ImageButton
            android:id="@+id/log_out_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:backgroundTint="#424756"
            android:src="@drawable/baseline_logout_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/game_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_layout"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/major_shift"
        android:text="@string/app_name"
        android:textColor="@color/brown"
        android:textSize="150sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_name_text_view"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="70dp"
        android:layout_marginVertical="160dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/play_btn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="30dp"
            android:fontFamily="@font/game_ring_demo_regular"
            android:text="@string/act_main_play_res"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/reset_btn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/game_ring_demo_regular"
            android:text="@string/act_main_reset_progress_res"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/how_to_play_btn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/game_ring_demo_regular"
            android:text="@string/act_main_htp_res"
            android:textSize="60dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/about_us_btn"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/game_ring_demo_regular"
            android:text="@string/act_main_about_us_res"
            android:textSize="60dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>
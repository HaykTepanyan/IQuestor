<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_bar_layout">

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/language_btn"
            android:src="@drawable/baseline_language_24"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#424756"
            android:background="?attr/selectableItemBackgroundBorderless"

            />

        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/volume_up_btn"
            android:src="@drawable/baseline_volume_up_24"
            android:layout_alignParentStart="true"
            android:layout_marginStart="38dp"
            android:layout_centerVertical="true"
            android:backgroundTint="#424756"
            android:background="?attr/selectableItemBackgroundBorderless"

            />


        <ImageButton
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:id="@+id/log_out_btn"
            android:src="@drawable/baseline_logout_24"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:backgroundTint="#424756"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar_layout"
        android:id="@+id/game_name_text_view"
        android:textColor="#737D49"
        android:textSize="70sp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/major_shift"
        android:text="@string/app_name"/>

    <TextView
        android:id="@+id/about_us_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_name_text_view"
        android:layout_centerHorizontal="true"
        android:text="Hello, you are being greeted by the creator of the 'IQuestor' application. This application is a quest game in which you have to go through the path of a soldier, making various choices that will directly effect the continuation of the game. The main goal is to rise from private to general."
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_marginHorizontal="20sp"
        android:layout_marginVertical="60sp"
        >

    </TextView>

    <TextView
        android:id="@+id/about_us_mail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mail: htepanyan@list.ru"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60sp"
        >

    </TextView>

    <TextView
        android:id="@+id/about_us_phone_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: +374 (33)-52-74-77"
        android:textStyle="bold|italic"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25sp"
        >

    </TextView>

    <TextView
        android:id="@+id/about_us_creator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Created by: Hayk Tepanyan"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_marginLeft="20sp"
        android:layout_marginVertical="245sp"
        >

    </TextView>

    <TextView
        android:id="@+id/about_us_teacher_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Teacher: Mikayel Elizbaryan"
        android:textStyle="bold|italic"
        android:textSize="18sp"
        android:layout_marginLeft="20sp"
        android:layout_marginVertical="220sp"
        >

    </TextView>

</RelativeLayout>